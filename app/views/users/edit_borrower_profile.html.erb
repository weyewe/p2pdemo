<%= simple_form_for @user, 
    :url => url_for(:action => 'update_borrower_profile', :controller => 'users'),
    :method => 'post'  do |f| %> 

  <%= f.input :email, :hint => "Your email. We got it from Facebook", :disabled => true %>
  <%= f.input :password, hint: 'Your password for this site', :placeholder => "******"  %>
  
  <h3>Profile</h3>
  <%= f.simple_fields_for :user_profile do |user_profile| %> 
    <%= user_profile.input :first_name %>
    <%= user_profile.input :last_name %>
  <% end %>  
  
  
      <!--#tasks.tab-pane.active role='tabpanel'-->
      <!--= f.simple_fields_for :tasks do |task|-->
      <!--  = render 'task_fields', :f => task-->
      <!--.links-->
      <!--  = link_to_add_association 'add task', f, :tasks-->
        
        
  <h3>Work Experience</h3>
  <div class="work_experiences"> 
    <%= f.simple_fields_for :work_experiences do |work_experience| %> 
    
      <%= render :work_experience_fields, :f => work_experience  %>
      <div class="links">
        <%= link_to_add_association 'add work', f, :work_experiences %>
      </div>
      
    <% end %>  
  </div>

  
 
  <%= f.submit 'Get My Quote', :class => 'btn btn-primary', :disable_with => 'Please wait ...' %>
<% end %> 